package Enemies.Monsters;
import java.util.Random;

class Batty extends Monsters {
    Batty() {
        this.maxHp = this.hp = 20;
        this.name = "Batty"
    }
    @Override
    public void takeTurn() {
        int turn = Room.turncount % 2;
        Random rand = new Random();
        switch (turn) {
            case 0:
                Player.player.beStruckBy(DiceSet.d4() + DiceSetd6());
                //print flavour text
                break;
        
            default:
                Player.player.beStruckBy(DiceSet.d4(2));
                //print flavour text
                break;
        }
    }
}