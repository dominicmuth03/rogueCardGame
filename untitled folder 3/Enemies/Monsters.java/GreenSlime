package Enemies.Monsters;
import java.util.Random;

class GreenSlime extends Monsters {
    GreenSlime() {
        this.maxHp = this.hp = 25;
        this.name = "Green Slime";
    }
    @Override
    public void takeTurn() {
        int turn = Room.turncount % 3;
        Random rand = new Random();
        switch (turn) {
            case 2:
                this.healUp(rand.nextInt(7));
                //print flavour text
                break;
        
            default:
                Player.player.beStruckBy(2 + DiceSet.d4());
                //print flavour text
                break;
        }
    }
}